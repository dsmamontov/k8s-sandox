# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|

  config.vm.provider "virtualbox" do |v|
    v.memory = 2048
  end

  config.vm.define "k8snode1" do |k8snode1|
    k8snode1.vm.box = "centos/7"
    k8snode1.vm.hostname = "k8snode1"
    k8snode1.vm.network "private_network", ip: "10.0.4.15"

    k8snode1.vm.provision "shell", inline: <<-SHELL
    	echo "ssh-rsa  OpenSSH-rsa-import-101417" >> /home/vagrant/.ssh/authorized_keys
      sudo yum update -y

  	SHELL
  end

  config.vm.define "k8snode2" do |k8snode2|
    k8snode2.vm.box = "centos/7"
    k8snode2.vm.hostname = "k8snode2"
    k8snode2.vm.network "private_network", ip: "10.0.4.16"

    k8snode2.vm.provision "shell", inline: <<-SHELL
    	echo "ssh-rsa  OpenSSH-rsa-import-101417" >> /home/vagrant/.ssh/authorized_keys
      sudo yum update -y
  	SHELL
  end

  config.vm.define "k8smaster" do |k8smaster|
    k8smaster.vm.box = "centos/7"
    k8smaster.vm.hostname = "k8smaster"
    k8smaster.vm.network "private_network", ip: "10.0.4.17"

    k8smaster.vm.provision "shell", inline: <<-SHELL
    	echo "ssh-rsa  OpenSSH-rsa-import-101417" >> /home/vagrant/.ssh/authorized_keys
      sudo yum update -y
  	SHELL
  end

  config.vm.define "deploy" do |deploy|
    deploy.vm.box = "centos/7"
    deploy.vm.hostname = "deploy"
    deploy.vm.network "private_network", ip: "10.0.4.18"

    deploy.vm.provision "file", source: "files/id_rsa", destination: "/home/vagrant/.ssh/id_rsa"
    deploy.vm.synced_folder "files/", "/home/vagrant"

    deploy.vm.provision "shell", inline: <<-SHELL
      sudo yum update -y
    	echo "ssh-rsa  OpenSSH-rsa-import-101417" >> /home/vagrant/.ssh/authorized_keys
      sudo yum install -y vim git python3 python-pip
      sudo chmod 600 /home/vagrant/.ssh/id_rsa
      sudo pip3 install --user ansible
  	SHELL

#    deploy.vm.provision "ansible_local" do |ansible|
#      ansible.playbook = "playbook.yml"
#    end
  end

end
